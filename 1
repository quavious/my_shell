int main(void){
	char *ptr, *ch;
	char *tok[20];
	char *next_ptr;
	int i =0;

	ch = getenv("PATH");
	for(i=0, ptr=ch; ;ptr=NULL,i++){
		tok[i] = strtok_r(ptr, ":", &next_ptr);
		if(tok[i] == NULL) break;
	}

	return 0;
}
